;
; Traffic lights finite state machine
; samples/traffic.fsm
;
:sequence
	1,2,3,4

:delay
	4000

:repeat
	1

; RED
:state
	echo "{R}"
	echo " A "
	echo " G "
.

; RED + AMBER
:state
	echo "{R}"
	echo "{A}"
	echo " G "
.

; GREEN
:state
	echo " R "
	echo " A "
	echo "{G}"
.

; AMBER
:state
	echo " R "
	echo "{A}"
	echo " G "
.
